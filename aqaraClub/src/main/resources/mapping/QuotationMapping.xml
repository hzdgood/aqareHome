<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aqara.common.mapper.QuotationMapper">
    <resultMap id="BaseResultMap" type="com.aqara.common.entity.Quotation">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="itemId" jdbcType="VARCHAR" property="itemId"/>
        <result column="type" jdbcType="VARCHAR" property="itemId"/>
        <result column="quotationId" jdbcType="VARCHAR" property="quotationId"/>
        <result column="projectId" jdbcType="VARCHAR" property="projectId"/>
        <result column="sales" jdbcType="VARCHAR" property="sales"/>
        <result column="depart" jdbcType="VARCHAR" property="depart"/>
        <result column="schemeAmount" jdbcType="VARCHAR" property="schemeAmount"/>
        <result column="discountAmount" jdbcType="VARCHAR" property="discountAmount"/>
        <result column="receivedAmount" jdbcType="VARCHAR" property="receivedAmount"/>
        <result column="outstandingAmount" jdbcType="VARCHAR" property="outstandingAmount"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="createName" jdbcType="VARCHAR" property="createName"/>
        <result column="createTime" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updateName" jdbcType="VARCHAR" property="updateName"/>
        <result column="updateTime" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <select id="select" resultType="com.aqara.common.entity.Quotation">
        select *
        from quotation
        where 1 = 1
          and code = #{code}
    </select>

    <select id="currentData" resultType="com.aqara.common.entity.Quotation">
        select *
        from quotation
        where 1 = 1
          and to_days(createTime) = to_days(now())
        order by department
    </select>

    <insert id="insert" parameterType="com.aqara.common.entity.Quotation" useGeneratedKeys="true" keyProperty="id">

    </insert>

    <insert id="update" parameterType="com.aqara.common.entity.Quotation">

    </insert>

    <delete id="delete" parameterType="com.aqara.common.entity.Quotation">
        delete
        from quotation
        where 1 = 1
          and id = #{id}
    </delete>

    <delete id="deleteAll" parameterType="com.aqara.common.entity.Quotation">
        delete from quotation where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteData" parameterType="com.aqara.common.entity.Quotation">
        delete
        from quotation
        where 1 = 1
    </delete>

</mapper>