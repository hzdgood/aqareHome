<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.aqara.common.mapper.SpeedyTeamMapper">
	<resultMap id="BaseResultMap" type="com.aqara.common.entity.SpeedyTeam">
		<result column="id" jdbcType="INTEGER" property="id" />
		<result column="team" jdbcType="VARCHAR" property="team" />
		<result column="type" jdbcType="VARCHAR" property="type" />
		<result column="affiliatePerson" jdbcType="VARCHAR" property="affiliatePerson" />
		<result column="company" jdbcType="VARCHAR" property="company" />
		<result column="createName" jdbcType="VARCHAR" property="createName" />
		<result column="createTime" jdbcType="TIMESTAMP" property="createTime" />
		<result column="updateName" jdbcType="VARCHAR" property="updateName" />
		<result column="updateTime" jdbcType="TIMESTAMP" property="updateTime" />
	</resultMap>
	
	<select id="select" resultType="com.aqara.common.entity.SpeedyTeam">
		select * from speedyTeam where 1 = 1
		<if test="type!=null and type!=''">  
    		AND type like concat('%',#{type,jdbcType=VARCHAR},'%')
		</if>
		<if test="affiliatePerson!=null and affiliatePerson!=''">
			AND affiliatePerson = #{affiliatePerson}
		</if>
	</select>
	
	<insert id="insert" parameterType="com.aqara.common.entity.SpeedyTeam" useGeneratedKeys="true" keyProperty="id">
		insert into speedyTeam ( team, type, affiliatePerson, company, createName, createTime )
			values ( #{team}, #{type}, #{affiliatePerson}, #{company}, #{createName}, NOW())
	</insert>
	
	<insert id="update" parameterType="com.aqara.common.entity.SpeedyTeam">
		update speedyTeam set
		    team = #{team},
		    type = #{type},
			affiliatePerson = #{affiliatePerson},
		    company = #{company},
		    updateName = #{updateName},
		    updateTime = NOW()
			where id = #{id} 
	</insert>
	
	<delete id="delete" parameterType="com.aqara.common.entity.SpeedyTeam">
		delete from speedyTeam where id in 
		<foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
	</delete>

</mapper>