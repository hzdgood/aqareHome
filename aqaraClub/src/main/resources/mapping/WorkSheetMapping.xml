<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aqara.common.mapper.WorkSheetMapper">
    <resultMap id="BaseResultMap" type="com.aqara.common.entity.WorkSheet">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="itemId" jdbcType="VARCHAR" property="itemId"/>
        <result column="custom" jdbcType="VARCHAR" property="custom"/>
        <result column="technology" jdbcType="VARCHAR" property="technology"/>
        <result column="actualWork" jdbcType="VARCHAR" property="actualWork"/>
        <result column="workType" jdbcType="VARCHAR" property="workType"/>
        <result column="area" jdbcType="VARCHAR" property="area"/>
        <result column="userName" jdbcType="VARCHAR" property="userName"/>
        <result column="engName" jdbcType="VARCHAR" property="engName"/>
        <result column="count" jdbcType="VARCHAR" property="count"/>
        <result column="restDay" jdbcType="VARCHAR" property="restDay"/>
        <result column="orderDate" jdbcType="TIMESTAMP" property="orderDate"/>
        <result column="dateOfVisit" jdbcType="TIMESTAMP" property="dateOfVisit"/>
        <result column="completeTime" jdbcType="TIMESTAMP" property="completeTime"/>
        <result column="createName" jdbcType="VARCHAR" property="createName"/>
        <result column="createTime" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updateName" jdbcType="VARCHAR" property="updateName"/>
        <result column="updateTime" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="select" resultType="com.aqara.common.entity.WorkSheet">
        select *
        from worksheetviewnow
    </select>

    <select id="selectTom" resultType="com.aqara.common.entity.WorkSheet">
        select *
        from worksheetviewtom
    </select>

    <select id="selectNoComplete" resultType="com.aqara.common.entity.WorkSheet">
        select *
        from workSheet w
        where w.dateOfVisit is null
          and w.custom is not null
    </select>

    <insert id="insert" parameterType="com.aqara.common.entity.WorkSheet" useGeneratedKeys="true" keyProperty="id">
        insert into workSheet (itemId, custom, technology, actualWork, workType, area,
                               orderDate, dateOfVisit, completeTime,
                               createName, createTime)
        values (#{itemId}, #{custom}, #{technology}, #{actualWork}, #{workType}, #{area},
                #{orderDate}, #{dateOfVisit}, #{completeTime},
                #{createName}, #{createTime})
    </insert>

    <insert id="update" parameterType="com.aqara.common.entity.WorkSheet">

    </insert>

    <delete id="deleteAll" parameterType="com.aqara.common.entity.WorkSheet">
        delete from workSheet where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteData" parameterType="com.aqara.common.entity.WorkSheet">
        delete
        from workSheet w
        where w.dateOfVisit is null
    </delete>
</mapper>