<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunqi.common.mapper.HuobanMapper">
    <resultMap id="BaseResultMap" type="com.yunqi.common.entity.Huoban">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="ticket" jdbcType="VARCHAR" property="ticket"/>
        <result column="expired" jdbcType="VARCHAR" property="expired"/>
        <result column="date" jdbcType="TIMESTAMP" property="date"/>
    </resultMap>

    <select id="select" resultType="com.yunqi.common.entity.Huoban">
        select *
        from huoban
        where 1 = 1
        order by date asc
    </select>

    <insert id="insert" parameterType="com.yunqi.common.entity.Huoban" useGeneratedKeys="true" keyProperty="id">
        insert into huoban (ticket, expired, date)
        values (#{ticket}, #{expired}, NOW())
    </insert>

    <delete id="delete" parameterType="com.yunqi.common.entity.Huoban">
        delete
        from huoban
        where id = #{id}
    </delete>
</mapper>