<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunqi.common.mapper.TechMapper">
    <select id="select" resultType="com.yunqi.common.entity.Tech">
        # 技术
        select *
        from tech
        where disabled is null
    </select>

    <select id="selectName" resultType="com.yunqi.common.entity.Tech">
        # 根据name查询技术
        select *
        from tech
        where name = #{name}
    </select>

    <insert id="insert" parameterType="com.yunqi.common.entity.Tech" useGeneratedKeys="true" keyProperty="id">
        # 新增
        insert into tech (name, status) value (#{name}, #{status})
    </insert>

    <delete id="delete" parameterType="com.yunqi.common.entity.Tech">
        # 删除
        delete
        from tech
        where id = #{id}
    </delete>
</mapper>